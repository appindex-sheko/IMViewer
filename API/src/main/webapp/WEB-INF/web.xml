<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!-- ===== PUBLIC API SERVLET ===== -->
  <servlet>
    <servlet-name>Public Resources</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>org.endeavourhealth.imviewer.api.publicendpoints</param-value>
    </init-param>
    <init-param>
      <param-name>jersey.config.server.provider.classnames</param-name>
      <param-value>org.glassfish.jersey.jackson.JacksonFeature,
        org.endeavourhealth.ui.framework.exceptions.BaseExceptionMapper</param-value>
    </init-param>

    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Public Resources</servlet-name>
    <url-pattern>/public/*</url-pattern>
  </servlet-mapping>

  <!-- ===== Private API SERVLET ===== -->
  <servlet>
    <servlet-name>Private Resources</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>org.endeavourhealth.imviewer.api.endpoints</param-value>
    </init-param>
    <init-param>
      <param-name>jersey.config.server.provider.classnames</param-name>
      <param-value>org.glassfish.jersey.jackson.JacksonFeature,
        org.endeavourhealth.ui.framework.exceptions.BaseExceptionMapper</param-value>
    </init-param>

    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Private Resources</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>

  <!-- ===== STARTUP ===== -->
  <context-param>
    <param-name>app_id</param-name>
    <param-value>imviewer</param-value>
  </context-param>

  <listener>
    <listener-class>
      org.endeavourhealth.coreui.framework.StartupConfig
    </listener-class>
  </listener>

  <!-- ===== COGNITO FILTERING ===== -->
  <filter>
    <filter-name>CognitoFilter</filter-name>
    <filter-class>org.endeavourhealth.imviewer.api.CognitoFilter</filter-class>
    <init-param>
      <param-name>region</param-name>
      <param-value>eu-west-2</param-value>
    </init-param>
    <init-param>
      <param-name>pool</param-name>
      <param-value>eu-west-2_9KWXGWs8l</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CognitoFilter</filter-name>
    <url-pattern>/api/*</url-pattern>
  </filter-mapping>


  <!-- ===== CORS FILTERING ===== -->
  <filter>
    <filter-name>CorsFilter</filter-name>
    <filter-class>org.endeavourhealth.coreui.framework.CORSFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CorsFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
